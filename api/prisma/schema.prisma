// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ProductStatus {
  REJECT
  ACCEPT
}

enum OrderStatus {
  EXPORTED
}

model user {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  username String
  password String
  products product[] @relation("products")
  orders   order[]   @relation("orders")
}

model product {
  id         Int                    @id @default(autoincrement())
  author     user                   @relation("products", fields: [authorId], references: [id])
  authorId   Int
  code       String                 @unique
  amount     Int
  createdAt  DateTime               @default(now())
  status     ProductStatus          @default(ACCEPT)
  categories CategoriesOnProducts[]
  orders     OrdersOnProducts[]     @relation("orderProduct")
}

model CategoriesOnProducts {
  id         Int      @id @default(autoincrement())
  product    product? @relation(fields: [productId], references: [id])
  productId  Int?
  category   category @relation(fields: [categoryId], references: [id])
  categoryId Int

}

model category {
  id       Int                    @id @default(autoincrement())
  name     String                 @unique
  products CategoriesOnProducts[]
}

model OrdersOnProducts {
  id            Int      @id @default(autoincrement())
  product       product? @relation("orderProduct", fields: [productId], references: [id])
  productId     Int?
  order         order    @relation("orderCode", fields: [orderId], references: [orderCode])
  orderId       String
  amountProduct Int
}

model order {
  id        Int                @id @default(autoincrement())
  orderCode String             @unique
  products  OrdersOnProducts[] @relation("orderCode")
  amount    Int
  author    user               @relation("orders", fields: [authorId], references: [id])
  authorId  Int
  status    OrderStatus        @default(EXPORTED)
  createdAt DateTime           @default(now())
}
